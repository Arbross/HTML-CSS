<Window x:Class="Disconnections.DB.WindowRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Disconnections.DB"
        mc:Ignorable="d"
        Title="WindowRegistration" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Registration" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <TextBox Name="Login" Margin="10" Grid.Row="1"/>
        <TextBox Name="Password" Margin="10" Grid.Row="2"/>
        <TextBox Name="Address" Margin="10" Grid.Row="3"/>
        <TextBox Name="Telephone" Margin="10" Grid.Row="4"/>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="5" Content="Add" MinHeight="40" MinWidth="100" Click="Button_Click"/>
    </Grid>
</Window>
