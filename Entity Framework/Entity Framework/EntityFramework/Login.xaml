<Window x:Class="EntityFramework.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityFramework"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <TextBox Name="LoginN" Margin="10" Grid.Row="1"/>
        <TextBox Name="PasswordN" Margin="10" Grid.Row="2"/>
        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="5" Content="Login" MinHeight="40" MinWidth="100" Click="Button_Click"/>
    </Grid>
</Window>
